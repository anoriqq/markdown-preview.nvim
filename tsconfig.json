{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "target": "es2019",

    // "strict": true, // to be continued...
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "outDir": "./app/lib",
    "rootDir": "./src",
  },
  "include": ["./src"],
  "exclude": ["./lib"]
}
